<div class="books">
  <h1 class="u-margin-Bm">Editing <%= @book.title %></h1>

  <%= form_for(@book) do |form| %>
    <p>
      <%= form.label :title %><br/>
      <%= form.text_field :title %>
    </p>
   
    <p>
      <%= form.label :thoughts %><br/>
      <%= form.text_area :thoughts %>
    </p>
   
    <%= form.submit %>
  <% end %>

  <div class="page-nav">
    <%=link_to "Back to book", book_path(@book) %>
  </div>

</div>